<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:biz.dfch.CS.CoffeeTracker.Client.Wpf.Resources.Styles">
    <Style TargetType="{x:Type Label}" x:Key="HyperLinkStyle">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Foreground" Value="Red" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="false">
                <Setter Property="Foreground"
                        Value="{DynamicResource Gray10}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="true">
                <Setter Property="Cursor" Value="Hand" />
            </Trigger>
        </Style.Triggers>
        <Setter Property="Foreground" Value="Blue" />
    </Style>
    <Style TargetType="{x:Type Label}" x:Key="SideBarButtonStyle">
        <Setter Property="FontSize" Value="20pt"/>
    </Style>
</ResourceDictionary>