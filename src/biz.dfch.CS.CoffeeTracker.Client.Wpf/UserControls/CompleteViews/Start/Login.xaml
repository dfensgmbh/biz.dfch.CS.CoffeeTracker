<UserControl x:Class="biz.dfch.CS.CoffeeTracker.Client.Wpf.UserControls.CompleteViews.Start.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:languageResources="clr-namespace:biz.dfch.CS.CoffeeTracker.Client.Wpf.Resources.LanguageResources"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Vertical">
            <Label Content="{x:Static languageResources:Resources.Login_Label_EmailAddress}"/>
            <TextBox
                TabIndex="10"
                Name="LoginEmail"
                Height="16pt" 
                controls:TextBoxHelper.Watermark="{x:Static languageResources:Resources.Shared_Email_Example}" 
                controls:TextBoxHelper.ClearTextButton="True"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Vertical">
            <Label Content="{x:Static languageResources:Resources.Login_Label_Password}"/>
            <DockPanel LastChildFill="True">
                <Button 
                    Name="LoginButton"
                    DockPanel.Dock="Right" 
                    Height="16pt" Width="16pt"
                    Click="LoginButton_OnClick"
                    IsDefault="True"
                    Style="{DynamicResource AccentedSquareButtonStyle}">
                    <iconPacks:PackIconFontAwesome Kind="ArrowRight" Width="10" Height="10"/>
                </Button>
                <PasswordBox
                    TabIndex="20"
                    Name="LoginPassword"
                    Height="16pt" 
                    controls:TextBoxHelper.Watermark="{x:Static languageResources:Resources.Shared_Password_Example}">
                </PasswordBox>
            </DockPanel>
                
        </StackPanel>
        <StackPanel 
            Name="LoginRegistrationStackPanel"
            Grid.Column="1" Grid.Row="3"  
            Orientation="Vertical">
            <Label Height="18pt" Content="{x:Static languageResources:Resources.Login_Label_NoAccount}"/>
            <Label 
                Height="18pt" 
                Style="{StaticResource HyperLinkStyle}" 
                Content="{x:Static languageResources:Resources.Login_Label_CreateOne}" 
                MouseLeftButtonUp="CreateAccountLabel_OnMouseUp"/>
        </StackPanel>
        <controls:ProgressRing 
            Name="ProgressRing"
            Grid.Column="1" Grid.Row="4" 
            IsActive="False"/>
    </Grid>
</UserControl>
