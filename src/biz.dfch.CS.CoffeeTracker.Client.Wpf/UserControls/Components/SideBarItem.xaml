<UserControl x:Class="biz.dfch.CS.CoffeeTracker.Client.Wpf.UserControls.Components.SideBarItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:biz.dfch.CS.CoffeeTracker.Client.Wpf.UserControls.Components"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label 
            Name="SideBarButtonLabel"
            Style="{StaticResource SideBarButtonStyle}"
            MouseEnter="SetBackgroundToLightGray"
            MouseLeftButtonDown="SetBackgroundToDarkGray"
            MouseLeftButtonUp="ChangeToParentBackground"
            MouseLeave="ChangeToParentBackground"
            HorizontalContentAlignment="Center"/>
    </Grid>
</UserControl>
