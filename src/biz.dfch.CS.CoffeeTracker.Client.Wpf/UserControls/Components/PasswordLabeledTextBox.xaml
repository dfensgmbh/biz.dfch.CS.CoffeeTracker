<UserControl x:Class="biz.dfch.CS.CoffeeTracker.Client.Wpf.UserControls.Components.PasswordLabeledTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:biz.dfch.CS.CoffeeTracker.Client.Wpf.UserControls.Components"
             xmlns:languageResources="clr-namespace:biz.dfch.CS.CoffeeTracker.Client.Wpf.Resources.LanguageResources"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Vertical">
        <Label Content="{x:Static languageResources:Resources.Login_Label_Password}"/>
        <PasswordBox
                TabIndex="20"
                Name="LoginPassword"
                Height="16pt" 
                controls:TextBoxHelper.Watermark="{x:Static languageResources:Resources.Shared_Password_Example}">
        </PasswordBox>
    </StackPanel>
</UserControl>
