<UserControl x:Class="biz.dfch.CS.CoffeeTracker.Client.Wpf.UserControls.Components.EmailLabeledTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:biz.dfch.CS.CoffeeTracker.Client.Wpf.UserControls.Components"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:languageResources="clr-namespace:biz.dfch.CS.CoffeeTracker.Client.Wpf.Resources.LanguageResources"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Vertical">
        <Label Content="{x:Static languageResources:Resources.Login_Label_EmailAddress}"/>
        <TextBox
            TabIndex="10"
            Name="EmailTextBox"
            Height="16pt" 
            controls:TextBoxHelper.Watermark="{x:Static languageResources:Resources.Shared_Email_Example}" 
            controls:TextBoxHelper.ClearTextButton="True"/>
    </StackPanel>
</UserControl>
